<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About">
    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" About laiCare"
        android:textSize="30sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"

        />
    <TextView
        android:id="@+id/mynewtxt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" laiCare is an application that provides health related information."
        android:textSize="20sp"
        android:textColor="#000000"
        android:textStyle="normal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt1"
        />
    <TextView
        android:id="@+id/mynewtxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Information ranges from drugs you would want to buy at your nearest chemist and at the most favorable price."
        android:textSize="20sp"
        android:textColor="#000000"
        android:textStyle="normal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/mynewtxt1"
        />
    <TextView
        android:id="@+id/mynewtxt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Information about the nearest hospital for specialized care also available and some exciting health tips on the my Doctor section"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textStyle="normal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/mynewtxt2"
        />
    <TextView
        android:id="@+id/mynewtxt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You can also obtain information about some available emmergency care contacts for youer area."
        android:textSize="20sp"
        android:textColor="#000000"
        android:textStyle="normal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/mynewtxt3"
        />

   <TextView
       android:id="@+id/mynewtxt5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text=" Information ranges from drugs you would want to buy at your nearest chemist and at the most favorable price."
    android:textSize="20sp"
    android:textColor="#000000"
    android:textStyle="normal"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/mynewtxt4"
    />



</RelativeLayout>